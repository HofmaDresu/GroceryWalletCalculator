<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroceryWalletCalculator.Pages.SetSpendingLimitPage"
             Title="Spending Limit">
  <StackLayout Orientation="Vertical" Margin="0,20,0,0">
    <Label Text="{Binding SpendingText}" FontSize="Large" HorizontalOptions="Center"></Label>
    <Entry HorizontalOptions="Fill" Keyboard="Numeric" Text="{Binding SpendingLimit}"></Entry>
    <Button Text="Start Shopping" Command="{Binding StartShoppingCommand}"></Button>
  </StackLayout>
</ContentPage>